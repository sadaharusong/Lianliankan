<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout android:id="@+id/widget0"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="@drawable/back"
	xmlns:android="http://schemas.android.com/apk/res/android"
	>
	
	<Button
		android:id = "@+id/startBtn"
		android:layout_width="200dp" 
		android:layout_height="50dp"
		android:background="@drawable/color_bkg_1"
		android:layout_x="30dp" 
		android:layout_y="170dp"
		android:text="@string/title_start"
		android:focusableInTouchMode="true"
		android:textColor="@color/blue"
	/>
	<Button
		android:id = "@+id/setBtn"
		android:layout_width="200dp" 
		android:layout_height="50dp"
		android:background="@drawable/color_bkg_1"
		android:layout_x="30dp" 
		android:layout_y="240dp"
		android:text="@string/title_set"
		android:focusableInTouchMode="true"
		android:textColor="@color/blue"
	/>
	<Button
		android:id = "@+id/aboutBtn"
		android:layout_width="200dp" 
		android:layout_height="50dp"
		android:background="@drawable/color_bkg_1"
		android:layout_x="30dp" 
		android:layout_y="300dp"
		android:text="@string/title_about"
		android:focusableInTouchMode="true"
		android:textColor="@color/blue"
	/>
	
	<Button
		android:id = "@+id/exitBtn"
		android:layout_width="200dp" 
		android:layout_height="50dp"
		android:background="@drawable/color_bkg_1"
		android:layout_x="30dp" 
		android:layout_y="360dp"
		android:text="@string/title_exit"
		android:focusableInTouchMode="true"
		android:textColor="@color/blue"
	/>
	
</AbsoluteLayout>
